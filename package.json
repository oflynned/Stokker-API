{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "main": "src/app.js",
  "scripts": {
    "build": "npm run clean && babel src -d dist",
    "check-linting": "eslint --ignore-path .eslintignore .",
    "clean": "rimraf dist/*",
    "heroku-postbuild": "npm install && npm run build",
    "lint": "eslint --ignore-path .eslintignore . --fix",
    "lint-staged": "lint-staged",
    "migrate": "migrate-mongo up",
    "serve": "NODE_ENV=production node dist/app.js",
    "sort-package-json": "sort-package-json",
    "start": "NODE_ENV=development nodemon src/app.js --exec babel-node",
    "test": "NODE_ENV=test ENVIRONMENT=test jest --runInBand --forceExit"
  },
  "lint-staged": {
    "\\.(test.js|js)": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/node": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/register": "^7.0.0",
    "apollo-server-express": "^1.3.6",
    "babel-core": "7.0.0-bridge.0",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "camo": "^0.12.3",
    "connect-mongo": "^3.0.0",
    "connection-string-parser": "^1.0.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "lodash": "^4.17.10",
    "marpat": "^2.1.0",
    "migrate-mongo": "^6.0.2",
    "mongodb": "^3.3.2",
    "morgan": "^1.9.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "babel-jest": "^23.6.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "faker": "^4.1.0",
    "husky": "^3.0.7",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "monk": "^7.1.0",
    "nodemon": "^1.19.3",
    "rimraf": "^2.6.2",
    "sort-package-json": "^1.22.1"
  }
}
